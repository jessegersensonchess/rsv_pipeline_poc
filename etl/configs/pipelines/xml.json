{
  "source": { "kind": "file", "file": { "path": "testdata/sample.xml" } },

  "parser": {
    "kind": "xml",
    "options": {
      "record_element": "current_observation",
      "columns": ["@version", "station_id", "weather", "temp_f"],
      "trim_space": true,
      "fields_per_record": 4
    }
  },


  "storage": {
    "kind": "postgres",
    "postgres": {
      "dsn": "postgresql://user:password@0.0.0.0:5432/testdb?sslmode=disable",
      "table": "public.items",
      "columns": ["version", "station_id", "weather", "temp_f"],
      "auto_create_table": true
    }
  },
  "runtime": {
    "reader_workers": 1,
    "transform_workers": 4,
    "loader_workers": 1,
    "batch_size": 10000,
    "channel_buffer": 4096
  }
}
